# Specify the source for gem dependencies
source 'https://rubygems.org'

# Specify the Ruby version (optional)
ruby '2.7.4'

# Jekyll and related plugins
group :jekyll_plugins do
  gem 'jekyll', '~> 3.10.0' # Specify Jekyll version for compatibility
  gem 'github-pages' # Include if you are building on GitHub Pages
  gem 'classifier-reborn'
  gem 'jekyll-archives'
  gem 'jekyll-email-protect'
  gem 'jekyll-feed'
  gem 'jekyll-get-json'
  gem 'jekyll-imagemagick'
  gem 'jekyll-jupyter-notebook'
  gem 'jekyll-link-attributes'
  gem 'jekyll-minifier'
  gem 'jekyll-paginate-v2'
  gem 'jekyll-scholar'
  gem 'jekyll-sitemap'
  gem 'jekyll-tabs'
  gem 'jekyll-toc'
  gem 'jekyll-twitter-plugin'
  gem 'jemoji'
  gem 'mini_racer'
  gem 'unicode_utils'
  gem 'webrick' # Required for local development on newer Ruby versions
end

# Other plugins not specifically tied to Jekyll
group :other_plugins do
  gem 'css_parser'
  gem 'feedjira'
  gem 'httparty'
end

